<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/eventCreationLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="25dp"
    android:foregroundGravity="center"
    android:padding="10dp"
    app:layout_anchorGravity="center"
    tools:context=".EventCreationFragment">

    <TextView
        android:id="@+id/title_add_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginHorizontal="20sp"
        android:layout_marginTop="125sp"
        android:gravity="center"
        android:text="Event Information"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/eventTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginHorizontal="50sp"
        android:layout_marginTop="225sp"
        android:layout_marginBottom="40sp"
        android:ems="10"
        android:gravity="center"
        android:hint="Event Title"
        android:inputType="text"
        android:textSize="25sp" />

    <Button
        android:id="@+id/add_event_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="250sp"
        android:text="Add Event"
        android:textSize="16sp" />

</FrameLayout>